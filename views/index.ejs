<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Exclusive Clubhouse</title>
</head>
<body>

  <!-- ðŸ”µ NAVBAR -->
  <nav class="navbar">
    <h2 class="logo">Clubhouse</h2>

    <div class="nav-right">
      <% if (currentUser) { %>
        <div class="dropdown">
          <button class="dropbtn">
            <%= currentUser.firstName %> âŒ„
          </button>

          <div class="dropdown-content">

            <% if (!currentUser.isMember) { %>
              <button onclick="toggleMember()">Join Club</button>
            <% } %>

            <% if (!currentUser.isAdmin) { %>
              <button onclick="toggleAdmin()">Become Admin</button>
            <% } %>

            <a href="/new-message">New Message</a>
            <a href="/logout">Logout</a>

          </div>
        </div>
      <% } else { %>
        <a href="/login" class="nav-btn">Login</a>
        <a href="/signup" class="nav-btn">Sign Up</a>
      <% } %>
    </div>
  </nav>


  <!-- ðŸ”µ PASSCODE FORMS (HIDDEN INITIALLY) -->

  <% if (currentUser) { %>

    <!-- Join Club Form -->
    <div id="memberForm" class="popup">
      <form method="POST" action="/join-club">
        <input name="passcode" placeholder="Enter Club Passcode">
        <button>Submit</button>
      </form>
    </div>

    <!-- Admin Form -->
    <div id="adminForm" class="popup">
      <form method="POST" action="/make-admin">
        <input name="secret" placeholder="Enter Admin Secret">
        <button>Submit</button>
      </form>
    </div>

  <% } %>


  <!-- ðŸ”µ MESSAGES SECTION -->
  <div class="container">
    <% messages.forEach(message => { %>

      <div class="card">
        <h3><%= message.title %></h3>
        <p><%= message.text %></p>

        <% if (currentUser && currentUser.isMember) { %>
          <small>By: <%= message.author.firstName %></small><br>
          <small><%= message.createdAt.toDateString() %></small>
        <% } %>

        <% if (currentUser && currentUser.isAdmin) { %>
          <form method="POST" action="/delete/<%= message._id %>">
            <button class="delete-btn">Delete</button>
          </form>
        <% } %>

      </div>

    <% }) %>
  </div>


  <script>
    function toggleMember() {
      document.getElementById("memberForm").classList.toggle("show");
    }

    function toggleAdmin() {
      document.getElementById("adminForm").classList.toggle("show");
    }
  </script>

</body>
</html>
